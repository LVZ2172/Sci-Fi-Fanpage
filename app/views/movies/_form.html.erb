<%= form_for @movie, remote: true, :html => {:class => "form-horizontal center"} do |f| %>
  <div class="form-group">
    <%= f.label :name, "Name", class: "col-md-4 control-label" %>
      <div class="col-md-8">
        <%= f.text_field :name %>
      </div>
  </div>

  <div class="form-group">
  <%= f.label :information, "Information", class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.text_area :information, :cols => "50", :rows => "10" %>
    </div>
  </div>

    <%= f.submit "Submit", class: "btn btn-default btn-primary" %>
<% end %>
